<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="572dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/whitebear"
                android:layout_width="148dp"
                android:layout_height="202dp"
                android:layout_marginLeft="125dp"
                android:scaleType="centerInside"
                android:src="@drawable/whitebear"
                android:paddingBottom="10dp"

                />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="155dp"
                android:paddingTop="10dp"
                android:text="REACH US AT"
                android:textStyle="bold"
                android:paddingBottom="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <ImageView
                    android:id="@+id/whatsapp"
                    android:layout_width="52dp"
                    android:layout_height="60dp"
                    android:src="@drawable/whatsapp" />

                <TextView
                    android:id="@+id/whatsapptext"
                    android:onClick="sendMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:text="9800098000"
                    android:paddingTop="22dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <ImageView
                    android:id="@+id/email"
                    android:layout_width="27dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="12dp"

                    android:src="@drawable/email" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="42dp"
                    android:text="whitebearEP@nitjsr.ac.in"
                    android:paddingTop="4dp"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FOLLOW US"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:paddingLeft="160dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/fb"
                    android:layout_width="0dp"
                    android:layout_height="58dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/fb2"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/insta"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/insta"/>

                <ImageView
                    android:id="@+id/twitter"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/twitter" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HEAD OFFICE"
                android:paddingLeft="155dp"
                android:paddingTop="15dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="170dp"
                android:paddingTop="10dp"
                android:text="HOSTEL I"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="140dp"
                android:paddingTop="10dp"
                android:text="NIT JAMSHEDPUR"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="175dp"
                android:paddingTop="10dp"
                android:text="831014"/>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
